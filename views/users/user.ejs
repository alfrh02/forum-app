<!DOCTYPE html>
<html>
    <head>
        <meta charset UTF-8>
        <title><%=siteName%>: <%=result.userName%></title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <nav>
            <div class="container">
                <a href="/">Homepage</a>
                <input type="button" onclick="showLoginForm()" value="Join topic"/>
                <% if (alreadyfailed == true) { %>
                    <p>Your credentials are incorrect or you are already a member of this topic.</p>
                <% } %>
            </div>
        </nav>
        <h1><%=result.userName%></h1>
        <h3>Posts</h3>
        <% for (let i = 0; i < result.posts.length; i++) { %>
            <% let post = result.posts[i] %>
            <div>
                <a href="/topic/<%=post.topicName%>/<%=post.postId%>"><%=post.postName%></a>
            </div>
        <% } %>
        <h3>Memberships</h3>
        <% for (let i = 0; i < result.memberships.length; i++) { %>
            <% let membership = result.memberships[i] %>
            <div>
                <a href="/topic/<%=membership.topicName%>"><%=membership.topicName%></a>
            </div>
        <% } %>
    </body>
</html>