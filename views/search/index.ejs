<!DOCTYPE html>
<html>
    <head>
        <meta charset UTF-8>
        <title><%=siteName%>: Index</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <a href="/">Homepage</a>
        <form method="POST" action="/searchresult">
            <input type="text" id="search" name="search"/>

            <label for="posts">posts</label>
            <input type="radio" id="posts" name="radio" value="posts"/>
            <label for="topics">topics</label>
            <input type="radio" id="topics" name="radio" value="topics"/>
            <label for="users">users</label>
            <input type="radio" id="users" name="radio" value="users"/>

            <input type="submit" value="Search"/>
        </form>
        <% if (result[0].postName != undefined) { %>
            <!-- POSTS -->
            <% for (let i = 0; i < result.length; i++) { %>
                <div>
                    <a href="/topic/<%=result[i].topicName%>/<%=result[i].postId%>"> <%=result[i].postName%></a>
                    by <a href="/user/<%=result[i].userName%>"><%=result[i].userName%></a>, <%=result[i].postCreationDate%>
                </div>
            <% } %>
        <% } else if (result[0].topicName != undefined) { %>
            <!-- TOPICS -->
            <% for (let i = 0; i < result.length; i++) { %>
                <div>
                    <a href="/topic/<%=result[i].topicName%>"> <%=result[i].topicName%>, <%=result[i].topicCreationDate%></a>
                </div>
            <% } %>
        <% } else { %>
            <!-- USERS -->
            <% for (let i = 0; i < result.length; i++) { %>
                <div>
                    <a href="/user/<%=result[i].userName%>"> <%=result[i].userName%>, <%=result[i].userCreationDate%></a>
                </div>
            <% } %>
        <% } %>
    </body>
</html>